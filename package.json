{
  "name": "root",
  "private": true,
  "packageManager": "bun@1.2.8",
  "scripts": {
    "lint": "eslint ./packages/plugin --max-warnings 0",
    "pretest:v4": "bun plugin build && bun --cwd packages/test/shared tsc",
    "test:plugin": "bun plugin test",
    "test:v4": "bun v4 test",
    "plugin": "bun run --cwd packages/plugin",
    "v4": "bun run --cwd packages/test/v4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.11.2",
    "@changesets/cli": "2.27.10",
    "@svitejs/changesets-changelog-github-compact": "1.2.0",
    "@types/bun": "latest",
    "eslint": "9.16.0",
    "eslint-plugin-format": "0.1.3",
    "eslint-plugin-svelte": "2.46.1",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  },
  "workspaces": ["packages/plugin", "packages/test/*"]
}
